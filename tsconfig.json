{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* linting */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* import paths */
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "shared/src/*"
      ]
    },

    /* misc */
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}